<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/activity_settings_textview_ram_cache_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        android:text="Ram cache size (bytes) : " />

    <EditText
        android:id="@+id/activity_settings_edittext_ram_cache_size"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/activity_settings_textview_ram_cache_size"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:layout_toRightOf="@+id/activity_settings_textview_ram_cache_size"
        android:layout_toEndOf="@+id/activity_settings_textview_ram_cache_size"
        android:gravity="end"
        android:hint="50"
        android:inputType="number"
        android:maxLines="1" />

    <TextView
        android:id="@+id/activity_settings_textview_disk_cache_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/activity_settings_textview_ram_cache_size"
        android:layout_margin="10dp"
        android:text="Disk cache size (bytes) : " />

    <EditText
        android:id="@+id/activity_settings_edittext_disk_cache_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/activity_settings_textview_disk_cache_size"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:layout_toRightOf="@+id/activity_settings_textview_disk_cache_size"
        android:layout_toEndOf="@+id/activity_settings_textview_disk_cache_size"
        android:gravity="end"
        android:hint="50"
        android:inputType="number"
        android:maxLines="1" />

    <TextView
        android:id="@+id/activity_settings_textview_cache_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/activity_settings_textview_disk_cache_size"
        android:layout_margin="10dp"
        android:text="Cache id : " />

    <EditText
        android:id="@+id/activity_settings_edittext_cache_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/activity_settings_textview_cache_id"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:layout_toRightOf="@+id/activity_settings_textview_cache_id"
        android:layout_toEndOf="@+id/activity_settings_textview_cache_id"
        android:gravity="end"
        android:hint="mycache"
        android:maxLines="1" />

    <Button
        android:id="@+id/activity_settings_button_demo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_settings_textview_cache_id"
        android:layout_margin="10dp"
        android:text="Start demo" />

</RelativeLayout>
